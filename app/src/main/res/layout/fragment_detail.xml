<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frags.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:text="@string/label_nickname"
            android:paddingStart="@dimen/len_10"
            android:paddingEnd="@dimen/len_10"
            android:paddingTop="@dimen/len_5"
            android:paddingBottom="@dimen/len_5"/>
        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="@string/label_tips"
            android:ellipsize="end"
            android:textSize="@dimen/font_14"
            android:textColor="@color/black_alpha_128"
            android:paddingStart="@dimen/len_10"
            android:paddingEnd="@dimen/len_10"
            android:paddingTop="@dimen/len_5"
            android:paddingBottom="@dimen/len_5"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>