<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/len_20"
    android:paddingTop="@dimen/len_40"
    android:paddingEnd="@dimen/len_24">

    <com.xana.acg.com.widget.PortraitView
        android:layout_width="@dimen/portraitMaxSize"
        android:layout_height="@dimen/portraitMaxSize"
        android:src="@drawable/ic_my"
        android:id="@+id/pv_avatar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_10"
        android:text="@string/label_nickname"
        android:textColor="@color/black"
        android:textSize="@dimen/len_16"
        android:id="@+id/tv_nickname"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/len_20"
        android:paddingBottom="@dimen/len_20">

        <LinearLayout
            android:layout_width="@dimen/len_60"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="@drawable/ic_touch_fg"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/len_28"
                android:layout_height="@dimen/len_28"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_drawer_msg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_6"
                android:text="@string/label_drawer_msg"
                android:textColor="@color/black"
                android:textSize="@dimen/len_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/len_60"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_6"
            android:clickable="true"
            android:foreground="@drawable/ic_touch_fg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/len_28"
                android:layout_height="@dimen/len_28"
                android:src="@drawable/ic_drawer_firend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_6"
                android:text="@string/label_drawer_firend"
                android:textColor="@color/black"

                android:textSize="@dimen/len_12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/len_60"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_6"
            android:clickable="true"
            android:foreground="@drawable/ic_touch_fg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/len_28"
                android:layout_height="@dimen/len_28"
                android:src="@drawable/ic_drawer_skin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_6"
                android:text="@string/label_drawer_skin"

                android:textColor="@color/black"
                android:textSize="@dimen/len_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/len_60"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_6"
            android:clickable="true"
            android:foreground="@drawable/ic_touch_fg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="21dp"
                android:layout_height="@dimen/len_28"
                android:src="@drawable/ic_drawer_music" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_6"
                android:text="@string/label_drawer_music"
                android:textColor="@color/black"
                android:textSize="@dimen/len_12"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>