<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:background="@color/white_alpha_144"
    android:elevation="@dimen/len_4"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:outlineProvider="bounds"
    android:paddingStart="@dimen/len_10"
    android:paddingEnd="@dimen/len_10"
    android:translationZ="@dimen/len_4"
    tools:targetApi="lollipop"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/edit_comment"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_32"
        android:layout_weight="1"
        android:background="@drawable/bg_comment_edit"
        android:gravity="center_vertical"
        android:hint="@string/label_comment_input"
        android:paddingStart="@dimen/len_6"
        android:paddingEnd="@dimen/len_6"
        android:textColor="@color/black_alpha_208"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/font_16"
        android:textCursorDrawable="@drawable/ic_cursor"/>

    <ImageView
        android:id="@+id/iv_comment_send"
        android:layout_width="@dimen/len_32"
        android:layout_height="@dimen/len_32"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_trigger"
        android:scaleType="centerCrop"/>
</LinearLayout>