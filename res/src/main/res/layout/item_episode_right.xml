<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/len_5"
    android:layout_marginEnd="@dimen/len_10"
    android:layout_marginBottom="@dimen/len_5"
    android:layout_marginTop="@dimen/len_5"
    android:background="@drawable/sel_bg_rad_6"
    android:padding="@dimen/len_10"
    android:id="@+id/fl_back">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_episode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_20"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/label_space"
        android:textSize="@dimen/font_14" />
</FrameLayout>