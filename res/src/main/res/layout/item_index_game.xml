        <!--                android:layout_gravity="center_vertical"-->
        <!--                android:contentDescription="@string/app_name"-->
        <!--                android:src="@drawable/ic_dura" />-->

        <!--            <TextView-->
        <!--                android:layout_width="wrap_content"-->
