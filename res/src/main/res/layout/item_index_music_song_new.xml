<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.xana.acg.com.widget.SquareImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="@drawable/ic_touch_fg"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_ireina"
            app:radius="@dimen/len_6" />


        <FrameLayout
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:background="@drawable/bg_circle_white"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/len_6"
            android:layout_marginBottom="@dimen/len_6">
            <ImageView
                android:layout_width="@dimen/len_16"
                android:layout_height="@dimen/len_16"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_play"
                android:tint="@color/red_900" />

        </FrameLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dis_of_text_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/label_tips"
        android:textColor="@color/black"
        android:textSize="@dimen/font_10" />

</LinearLayout>